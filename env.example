# HouseHunter API Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Notion Integration
# Get these from https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_ENABLED=true

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/househunter

# Security (for future use)
# SECRET_KEY=your_secret_key_here
# JWT_SECRET_KEY=your_jwt_secret_key_here

# External APIs (for future use)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# HERE API Configuration
# Get your API key from https://here.com
HERE_API_KEY=your_here_api_key_here
HERE_API_ENABLED=true

# Logging
LOG_LEVEL=INFO 